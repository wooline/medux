{
  "name": "@medux/core",
  "version": "1.1.1-alpha.2",
  "description": "Modular state management,Suitable for various javascript frameworks.",
  "repository": "https://github.com/wooline/medux/tree/master/packages/core",
  "author": "wooline <wooline@qq.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "vue",
    "redux",
    "typescript",
    "state container",
    "state management"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "jsnext": "dist/next/index.js",
  "tsSource": "src/",
  "types": "types/",
  "files": [
    "src/",
    "env/",
    "types/",
    "dist/"
  ],
  "scripts": {
    "type": "tsc",
    "typeSrc": "tsc -P ./src",
    "typeTests": "tsc -P ./tests",
    "eslint": "eslint --cache .",
    "eslintSrc": "eslint --cache ./src",
    "eslintTests": "eslint --cache ./tests",
    "buildTypes": "tsc --project ./src/tsconfig.types.json && copyfiles -f ./src/*.d.ts ./types",
    "test": "jest",
    "prebuild": "yarn type & yarn typeSrc & yarn typeTests & yarn eslint & yarn eslintSrc & yarn eslintTests && yarn test && rimraf ./dist ./types && yarn buildTypes",
    "build:ts": "tsc -P ./src --module ESNext --isolatedModules false --noEmit false --outDir ./dist/ts",
    "build:next": "cross-env NODE_ENV=production NODE_TAG=next babel ./src --out-dir ./dist/next  --extensions \".ts,.tsx\"",
    "build:esm": "cross-env NODE_ENV=production NODE_TAG=esm babel ./src --out-dir ./dist/esm  --extensions \".ts,.tsx\"",
    "build:cjs": "cross-env NODE_ENV=production NODE_TAG=cjs babel ./src --out-dir ./dist/cjs  --extensions \".ts,.tsx\"",
    "build": "yarn build:next & yarn build:esm & yarn build:cjs",
    "docs": "typedoc --out api src/index.ts",
    "docs-md": "typedoc --plugin typedoc-plugin-markdown  --out api src/index.ts --hideSources --theme markdown && node fixDocs"
  },
  "dependencies": {
    "@babel/runtime": "~7.9.0",
    "redux": "~4.0.5"
  }
}
