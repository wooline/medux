{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./libs",
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "importHelpers": true,
    "newLine": "LF",
    "lib": ["es2017"],
    "removeComments": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["./src", "./test"]
}
